{{#our-modal title="Add machine" param=model.machine save="save" cancel="cancel"}}
  <form>
    <p class="form-group">
      <label for="provider-select" class='control-label col-sm-2'>
        Provider
      </label>
      <div class="col-sm-10">
        {{my-select id="provider-select" content=model.providers
          action=(action (mut selectedProvider))}}
      </div>
    </p>
    <div class="row">
      {{#each selectedProvider.machineTemplates as |tpl|}}
        <div class="col-xs-6 col-lg-4">
          <div class="panel panel-primary">
            <div class="panel-heading radio">
              <label class="machine-template-selector">
                {{input type="radio" name="machine-template" value=tpl.id}}
                {{tpl.name}}
              </label>
            </div>
            <div class="panel-body">
              <table class="table table-condensed">
                <tr>
                  <th>Disk</th><td>{{tpl.disk}}</td>
                </tr>
                <tr>
                  <th>Cores</th><td>{{tpl.cores}}</td>
                </tr>
                <tr>
                  <th>Ram</th><td>{{tpl.ram}}</td>
                </tr>
                <tr>
                  <th>Transfer</th><td>{{tpl.transfer}}</td>
                </tr>
                <tr>
                  <th>Location</th><td>{{tpl.location}}</td>
                </tr>
                <tr>
                  <th>Price</th><td>{{tpl.price}}</td>
                </tr>
              </table>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    {{machine-form model=model.machine}}
  </form>
{{/our-modal}}
