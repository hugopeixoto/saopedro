{{outlet}}

<h1>Runscripts</h1>
<div class="row runscript-index">
  <div class="col-xs-6 col-lg-4">
    <div class="panel panel-primary">
      <div class="panel-heading">New runscript</div>
      <div class="panel-body">
        {{#link-to 'runscripts.new'}}
          <span class="new-runscript glyphicon glyphicon-plus" aria-hidden="true"></span>
        {{/link-to}}
      </div>
    </div>
  </div>

  {{#each model as |runscript|}}
    <div class="col-xs-6 col-lg-4">
      <div class="panel panel-info">
        <div class="panel-heading">
          <div class='pull-right'>
            {{#link-to 'runscripts'}}
              <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
            {{/link-to}}
            {{#link-to 'runscripts'}}
              <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            {{/link-to}}
          </div>
          {{runscript.name}}
        </div>
        <div class="panel-body">
          <p>
            {{#each runscript.tagList as |tag|}}
              <span class="label label-info">{{tag}}</span>
            {{/each}}
          </p>
          <pre><code>{{runscript.script}}</code></pre>
        </div>
      </div>
    </div>
  {{/each}}
</div>
